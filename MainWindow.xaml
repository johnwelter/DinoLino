<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:DinoLino"
    xmlns:System="clr-namespace:System;assembly=mscorlib" xmlns:core="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DinoLino.MainWindow"
    mc:Ignorable="d"
    Title="DinoLino" Height="584.24" Width="1062.441"
    ResizeMode="NoResize">

    <DockPanel>

        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open Image" Click="OpenImage_UICall"/>
            </MenuItem>
            <MenuItem Header="_Edit">
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="About_UICall"/>
            </MenuItem>
        </Menu>
        
        <Grid x:Name="UI_WindowGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <StackPanel x:Name="UI_AngleAnalyticsControls" Grid.Column="0">
                <StackPanel x:Name="UI_AngleAnalyticsButtons" Grid.Row="0" Margin="10,16,10,20">

                    <StackPanel.Resources>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Margin" Value="36,10,36,0"/>
                            <Setter Property="Height" Value="36"/>
                        </Style>
                    </StackPanel.Resources>

                    <Button x:Name="UI_AAClearButton" Content="Clear" VerticalAlignment="Top" Click="ClearCanvas_UICall"/>
                </StackPanel>
                <StackPanel x:Name="UI_AngleAnalyticsOutputs" Grid.Row="1">
                    <StackPanel x:Name="UI_AAAngleOutput" Orientation="Horizontal" >
                        <Label x:Name="UI_AAAngleOutputLabel" Content="ANGLE:" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontWeight="Bold" FontSize="18"/>
                        <Label x:Name="UI_AAAngleOutputValue" Content="NA" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="175" FontSize="16"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            
            <ScrollViewer x:Name="UI_WorkScrollViewer" Grid.Column="1">
                <Canvas x:Name="UI_WorkCanvas" MouseMove="WorkCanvasMouseMove_UICall" MouseDown="WorkCanvasClicked_UICall" Background="#FF888888"/>
            </ScrollViewer>

            <!-- the idea eventually will be make the image zoomable - need to do more research on that
            
            <Grid x:Name="UI_WorkArea" Grid.Column="1">
                <ScrollViewer x:Name="UI_WorkScrollViewer" Grid.Column="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Canvas x:Name="UI_WorkCanvas">
                        <Viewbox x:Name="UI_WorkViewBox" MouseMove="WorkCanvasMouseMove_UICall" MouseDown="WorkCanvasClicked_UICall">
                            <Image x:Name="UI_WorkImage"></Image>
                        </Viewbox>
                    </Canvas>
                </ScrollViewer>
            </Grid>
            
            -->
            
        </Grid>
    </DockPanel>
</Window>
