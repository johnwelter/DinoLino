<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:DinoLino"
    xmlns:System="clr-namespace:System;assembly=mscorlib" xmlns:core="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DinoLino.MainWindow"
    mc:Ignorable="d"
    Title="DinoLino" Height="584.24" Width="1062.441"
    ResizeMode="NoResize">

    <DockPanel>

        <!-- 
            Menu Bar 
            - File
                - Open Image:   opens a selected image
            - Edit
            - Help
                - About:        opens about window
        -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open Image" Click="Menu_OpenImage"/>
            </MenuItem>
            <MenuItem Header="_Edit">
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="Menu_About"/>
            </MenuItem>
        </Menu>
        
        <!-- 
            Main Program Window
            - Controls Panel
                - Global Controls
                - Mode tabs
                    - Curvatrue mode
                        - Curvature Mode controls
                        - Curvature Mode outputs
                            - Curvature angle output
                    - Angle mode
                    - Draw mode
            - Work Space
        -->
        
        <Grid x:Name="UI_MainWindow">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="2.5*"/>
            </Grid.ColumnDefinitions>

            <!-- Controls Panel: toolbars and outputs for different controls and modes-->
            <StackPanel x:Name="UI_ControlPanel" Grid.Column="0">
                
                <!-- Controls that aren't dependent on mode type  -->
                <StackPanel x:Name="UI_GlobalControls">
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Margin" Value="36,10,36,10"/>
                            <Setter Property="Height" Value="36"/>
                        </Style>
                    </StackPanel.Resources>

                    <!-- Clears all added/Drawn UI from work space - might move this as a file or edit command with a keyboard shortcut -->
                    <Button x:Name="UI_AAClearButton" Content="Clear" VerticalAlignment="Top" Click="WorkSpace_Clear"/>
                
                </StackPanel>
                
                <!-- Mode tabs -->
                <TabControl x:Name="UI_ControlTabs" Margin="0,10,0,10">
                    
                    <!-- curvature mode controls and outputs-->
                    <TabItem Header="Curvature">
                        <StackPanel x:Name="UI_CurvatureControls">
                            
                            <!-- tools/buttons specific to the curvature mode go here, though I'm not sure there are any needed -->
                            <StackPanel x:Name="UI_CurvatureButtons" Grid.Row="0" Margin="10,16,10,20">
                                <StackPanel.Resources>
                                    <Style TargetType="{x:Type Button}">
                                        <Setter Property="Margin" Value="36,10,36,0"/>
                                        <Setter Property="Height" Value="36"/>
                                    </Style>
                                </StackPanel.Resources>

                            </StackPanel>
                            <StackPanel x:Name="UI_CurvatureOutputs" Grid.Row="1">
                                <StackPanel x:Name="UI_CurveAngleOutput" Orientation="Horizontal" >
                                    <Label x:Name="UI_CurveAngleOutputLabel" Content="ANGLE:" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontWeight="Bold" FontSize="18"/>
                                    <Label x:Name="UI_CurveAngleOutputValue" Content="NA" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="175" FontSize="16"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </TabItem>
                    <!-- angle mode controls and outputs-->
                    <TabItem Header="Angle">
                        
                    </TabItem>
                    <!-- draw mode controls and outputs-->
                    <TabItem Header="Draw">
                        
                    </TabItem>
                </TabControl>
            </StackPanel>
            
            <Grid x:Name="UI_WorkSpace" Grid.Column="1" ClipToBounds="True">
                <Grid MouseMove="WorkSpace_MouseMove" MouseDown="WorkSpace_Click" MouseWheel="WorkSpace_ScrollZoom">
                    <Border x:Name ="UI_WorkBorder" BorderBrush="White" BorderThickness="3" Panel.ZIndex="10" Width="{Binding ActualWidth, ElementName=UI_WorkImage, Mode=OneWay}" Height="{Binding ActualHeight, ElementName=UI_WorkImage, Mode=OneWay}">
                        <Canvas x:Name="UI_WorkCanvas"/>
                    </Border>
                    <Canvas x:Name="UI_WorkBackground" Background="Gray" />
                    <Image x:Name="UI_WorkImage"/>
                </Grid>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
